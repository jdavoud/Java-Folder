	public static void scanLine(){
		line.replaceAll(" ", "");
		if(numberOf("(") == numberOf(")")){
			if(numberOf("(") != 0){
				for(int i = 0; i < line.length(); i++){
					if(line.substring(i, i + 1).equals("(")){
						if(line.indexOf(")",i) < line.indexOf("(",i)){
							
